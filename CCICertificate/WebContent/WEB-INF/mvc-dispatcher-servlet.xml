    <security:intercept-url pattern="/pch*.do" access="hasRole('ROLE_ACCOUNT')"/>
    <security:intercept-url pattern="/**" access="isFullyAuthenticated()" requires-channel="https"/>
    <security:form-login login-page="/login.do" default-target-url="/main.do"/>
    <security:http-basic/>
    <security:logout logout-url="/logout.do" logout-success-url="/main.do"/> 
    <security:remember-me/> 
